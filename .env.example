# Choose your LLM provider: 'local', 'groq', or 'openai'
LLM_PROVIDER=groq

# Groq Configuration (FREE)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# OpenAI Configuration (PAID - optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embeddings - use 'local' for free embeddings
EMBEDDING_PROVIDER=local
HF_LOCAL_MODEL=all-MiniLM-L6-v2

# Database Configuration
CHROMA_PERSIST_DIR=./chroma_db
PROPERTIES_CSV=data/properties_cleaned.csv
INGEST_BATCH_SIZE=128
RESET_DB=false

# Server Configuration
PORT=8000